@model RIAT.DAL.Entity.Models.DoencaPaciente
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer;
@{
    ViewData["Title"] = @Localizer["Title"];
}

<h1>@Localizer["PageType"]</h1>

<h4>@ViewData["Title"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="PaciIdPacienteNavigation.NomePaciente" class="control-label"></label>
                <input asp-for="PaciIdPacienteNavigation.NomePaciente" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="DoenIdDoencaNavigation.DoenCodDoenca" class="control-label"></label>
                <input class="form-control" value="@Html.DisplayFor(model => model.DoenIdDoencaNavigation.DoenCodDoenca) - @Html.DisplayFor(model => model.DoenIdDoencaNavigation.DoenNmHipotese)" readonly />
                @*<select asp-for="DoenIdDoenca" class="form-control" asp-items="ViewBag.DoenIdDoenca"></select>*@
                @*<span asp-validation-for="DoenIdDoenca" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <input type="submit" value=@Localizer["btnSave"] class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@Localizer["btnBackList"]</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
