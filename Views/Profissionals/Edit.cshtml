@model RIAT.DAL.Entity.Models.Profissional
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer;
@{
    ViewData["Title"] = @Localizer["Title"];
}

<div class="container">
    <div class="row justify-content-center">
        <div class="media-container-column col-lg-8">
            <h1>@ViewData["Title"]</h1>
            <form asp-action="Edit" class="mbr-form form-with-styler">
                <h4>@Localizer["PageType"]</h4>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="IdPessoa" />
                <div class="form-group">
                    <label class="control-label">@Localizer["PersonCode"]</label>
                    <input asp-for="IdPessoa" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label class="control-label">@Localizer["ProfessionalName"]</label>
                    <input asp-for="NomeProfissional" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label class="control-label">@Localizer["ProfessionalType"]</label>
                    <select asp-for="TiprIdTipoProfissional" class="form-control" asp-items="ViewBag.TiprIdTipoProfissional"></select>
                    <span asp-validation-for="TiprIdTipoProfissional" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">@Localizer["ProfessionalNumber"]</label>
                    <input asp-for="ProfNrCrp" class="form-control" />
                    <span asp-validation-for="ProfNrCrp" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">@Localizer["ProfessionalCDEPSI"]</label>
                    <input asp-for="ProfCdEPsi" class="form-control" />
                    <span asp-validation-for="ProfCdEPsi" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">@Localizer["ProfessionalInternalCurriculum"]</label>
                    <input asp-for="ProfTxMiniCurriculoInterno" class="form-control" />
                    <span asp-validation-for="ProfTxMiniCurriculoInterno" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">@Localizer["ProfessionalPublicCurriculum"]</label>
                    <input asp-for="ProfTxMiniCurriculoPublico" class="form-control" />
                    <span asp-validation-for="ProfTxMiniCurriculoPublico" class="text-danger"></span>
                </div>
                @if (User.IsInRole("Administradores"))
                {
                    <div class="form-group">
                        <label asp-for="ProfStAtivo" class="control-label"></label>
                        <input asp-for="ProfStAtivo" class="form-control" />
                        <span asp-validation-for="ProfStAtivo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ProfDtAtivacao" class="control-label"></label>
                        <input asp-for="ProfDtAtivacao" class="form-control" />
                        <span asp-validation-for="ProfDtAtivacao" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ProfDtDesativacao" class="control-label"></label>
                        <input asp-for="ProfDtDesativacao" class="form-control" />
                        <span asp-validation-for="ProfDtDesativacao" class="text-danger"></span>
                    </div>
                }
                <div class="form-group">
                    <div class="col-md-12 input-group-btn align-center">
                        <button type="submit" class="btn btn-primary btn-form display-4">@Localizer["btnSave"]</button>
                    </div>
                </div>
                <div class="form-group">
                    <a asp-action="Index">@Localizer["btnBackList"]</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
