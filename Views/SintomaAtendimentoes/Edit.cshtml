@model RIAT.DAL.Entity.Models.SintomaAtendimento
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer;
@{
    ViewData["Title"] = @Localizer["Title"];
}

<h1>@Localizer["PageType"]</h1>

<h4>@ViewData["Title"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="IdAtendimentoNavigation.PaciIdPacienteNavigation.NomePaciente" class="control-label"></label>
                <input asp-for="IdAtendimentoNavigation.PaciIdPacienteNavigation.NomePaciente" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="IdAtendimentoNavigation.ProfIdProfissionalNavigation.NomeProfissional" class="control-label"></label>]
                <input asp-for="IdAtendimentoNavigation.ProfIdProfissionalNavigation.NomeProfissional" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="IdAtendimentoNavigation.AtenDtAgendamento" class="control-label"></label>
                <input asp-for="IdAtendimentoNavigation.AtenDtAgendamento" class="form-control" readonly />
                <input type="hidden" asp-for="IdAtendimento" />
                IdAtendimento
            </div>
            <div class="form-group">
                <label asp-for="DopaIdDoencaPacienteNavigation.DoenIdDoencaNavigation.DoenNmHipotese" class="control-label"></label>
                <input asp-for="DopaIdDoencaPacienteNavigation.DoenIdDoencaNavigation.DoenNmHipotese" class="form-control" readonly />
                <input type="hidden" asp-for="DopaIdDoencaPaciente" />
            </div>
            <div class="form-group">
                <label asp-for="SintIdSintomaNavigation.SintNomeSintoma" class="control-label"></label>
                <input asp-for="SintIdSintomaNavigation.SintNomeSintoma" class="form-control" readonly />
                <input type="hidden" asp-for="SintIdSintoma" />
            </div>
            <div class="form-group">
                <label asp-for="SidhCdPeso" class="control-label"></label>
                <input asp-for="SidhCdPeso" class="form-control" />
                <span asp-validation-for="SidhCdPeso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value=@Localizer["btnSave"] class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@Localizer["btnBackList"]</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
