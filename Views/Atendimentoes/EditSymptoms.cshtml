                        <label asp-for="AtenDtCancelamento" class="control-label"></label>
                        <input asp-for="AtenDtCancelamento" class="form-control" />
                        <span asp-validation-for="AtenDtCancelamento" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="AtenTxMotivoCancelamento" class="control-label"></label>
                        <input asp-for="AtenTxMotivoCancelamento" class="form-control" />
                        <span asp-validation-for="AtenTxMotivoCancelamento" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="AtenDtRealizadaInicio" class="control-label"></label>
