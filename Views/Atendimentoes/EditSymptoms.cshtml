                    <label asp-for="VideoConferencia" class="control-label"></label>
                    <input asp-for="VideoConferencia" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <div class="col-md-12 input-group-btn align-center">
                        <button type="submit" class="btn btn-primary btn-form display-4">@Localizer["btnSave"]</button>
                    </div>
                </div>
                <div class="form-group">
                    <a asp-action="Index">@Localizer["btnBackList"]</a>
                </div>
            </form>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Localizer["DiseaseName"]
                </th>
                <th>
                    @Localizer["SymptomName"]
                </th>
                <th>
                    @Localizer["LevelSymptom"]
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.SintomaAtendimentos)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.DopaIdDoencaPacienteNavigation.DoenIdDoencaNavigation.DoenNmHipotese)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SintIdSintomaNavigation.SintNomeSintoma)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SidhCdPeso)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">@Localizer["Edit"]</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">@Localizer["Details"]</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">@Localizer["Delete"]</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
