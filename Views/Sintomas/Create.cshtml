@model RIAT.DAL.Entity.Models.Sintoma
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer;

@{
    ViewData["Title"] = @Localizer["Title"];
}

<h1>@Localizer["PageType"]</h1>

<h4>@ViewData["Title"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SintCodSintoma" class="control-label"></label>
                <input asp-for="SintCodSintoma" class="form-control" />
                <span asp-validation-for="SintCodSintoma" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SintNomeSintoma" class="control-label"></label>
                <input asp-for="SintNomeSintoma" class="form-control" />
                <span asp-validation-for="SintNomeSintoma" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SintDsSintoma" class="control-label"></label>
                <input asp-for="SintDsSintoma" class="form-control" />
                <span asp-validation-for="SintDsSintoma" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DoenIdDoenca" class="control-label"></label>
                <select asp-for="DoenIdDoenca" class ="form-control" asp-items="ViewBag.DoenIdDoenca"></select>
            </div>
            <div class="form-group">
                <input type="submit" value=@Localizer["btnCreate"] class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@Localizer["btnBackList"]</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
