@model RIAT.DAL.Entity.Models.Sintoma
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer;
@{
    ViewData["Title"] = @Localizer["Title"];
}

<h1>@Localizer["PageType"]</h1>

<div>
    <h4>@ViewData["Title"]</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SintCodSintoma)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SintCodSintoma)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SintNomeSintoma)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SintNomeSintoma)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SintDsSintoma)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SintDsSintoma)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DoenIdDoencaNavigation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DoenIdDoencaNavigation.DoenCodDoenca)
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("Profissionais") || User.IsInRole("Administradores"))
    {
        <a asp-action="Edit" asp-route-id="@Model.Id">@Localizer["btnEdit"]</a>
    }
    | <a asp-action="Index">@Localizer["btnBackList"]</a>
</div>
